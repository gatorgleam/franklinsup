  <script>
    (function(){
      var root=document.querySelector(".ffsv-issues"); if(!root) return;
      var thumbs=root.querySelectorAll(".ffsv-issues__thumb");
      for(var i=0;i<thumbs.length;i++){
        thumbs[i].addEventListener("click",function(){
          var id=this.getAttribute("data-video-id");
          var start=this.getAttribute("data-start");
          var qs="autoplay=1&rel=0&playsinline=1";
          if(start) qs+="&start="+start;

          var wrap=document.createElement("div"); wrap.className="ffsv-issues__player";
          var ratio=document.createElement("div"); ratio.className="ffsv-issues__ratio";
          var iframe=document.createElement("iframe");

          iframe.src="https://www.youtube.com/embed/"+id+"?"+qs;
          iframe.allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture";
          iframe.allowFullscreen=true;
          iframe.title="YouTube video player";

          ratio.appendChild(iframe);
          wrap.appendChild(ratio);
          this.parentNode.replaceChild(wrap,this);
        },{once:true});
      }
    })();
  </script>

